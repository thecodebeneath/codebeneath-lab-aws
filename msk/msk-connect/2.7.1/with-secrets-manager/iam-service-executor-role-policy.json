		{
			"Effect": "Allow",
			"Action": [
				"kafka-cluster:Connect",
				"kafka-cluster:DescribeCluster"
			],
			"Resource": [
				"arn:aws:kafka:us-east-2:732457136693:cluster/codebeneath-lab-kafka-cluster/478762f2-af90-4703-bf45-8af87c7c45c8-4"
			]
		},
		{
			"Effect": "Allow",
			"Action": [
				"kafka-cluster:ReadData",
				"kafka-cluster:DescribeTopic"
			],
			"Resource": [
				"arn:aws:kafka:us-east-2:732457136693:topic/*"
			]
		},
		{
			"Effect": "Allow",
			"Action": [
				"kafka-cluster:WriteData",
				"kafka-cluster:DescribeTopic"
			],
			"Resource": [
				"arn:aws:kafka:us-east-2:732457136693:topic/*"
			]
		},
		{
			"Effect": "Allow",
			"Action": [
				"kafka-cluster:CreateTopic",
				"kafka-cluster:WriteData",
				"kafka-cluster:ReadData",
				"kafka-cluster:DescribeTopic"
			],
			"Resource": [
				"arn:aws:kafka:us-east-2:732457136693:topic/*"
			]
		},
		{
			"Effect": "Allow",
			"Action": [
				"kafka-cluster:AlterGroup",
				"kafka-cluster:DescribeGroup"
			],
			"Resource": [
				"arn:aws:kafka:us-east-2:732457136693:*"
			]
		}
	]
}

